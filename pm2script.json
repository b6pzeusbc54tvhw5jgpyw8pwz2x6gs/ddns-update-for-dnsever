{
	"name": "DNSEver.com DDNS Updater",
	"script": "ddnsUpdate.js",
	"args": [ "--color" ],
	"env": {
		"DNSEVER_ID": "myDNSEverUserID",						// DNSEver User ID
		"DNSEVER_DDNS_SECRET_CODE": "DDNSSecretCode",		// dnsever.com > 내정보 > DNS 환경설정 > 다이나믹DNS 인증코드
		"DNSEVER_TARGET_HOST_NAME_TO_IP": {
			"www.your-domain.com": "123.123.123.123",	// DDNS will set to 123.123.123.123
			"your-domain.com": "123.123.123.123",		// DDNS will set to 123.123.123.123
			"www.your-second-domain.com": null,			// DDNS will set to the public ip of current PC
			"your-second-domain.com": null				// DDNS will set to the public ip of current PC
		},
		"DNSEVER_AUTO_RUN": true						// If you want to use it by importing to other nodejs app, set to false
	}
}
